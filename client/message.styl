.text-help
  text-decoration: dotted underline gray
  cursor: help

.danger-close
  color: #d9534f  // background color of .label-danger

.attachInput[type="file"], .replaceInput[type="file"]
  display: none

.historySlider input[type="text"]
  display: none

.onMessageDrop span:not(.fa-edit)
  pointer-events: none

// @mention / Author search highlighting

.highlight
  background: yellow
  color: black
  /.dark &
    background: hsl(60, 75%, 16%)
    color: white

// Dropdown menus

.dropdown-menu
  &.actionMenu
    min-width: 140px
    background: #d9edf7
    /.dark &
      background: #175b70
    //> li > a:hover { min-width: 100px; background: white; }
  &.replyMenu
    min-width: 215px
  &.buttonMenu
    > li > a
      padding: 2px 10px
      &:hover
        background: white

// Tags

.outer-label
  padding: 0px
  font-size: inherit  // prevent double shrinkage via 75%
.label-left
  border-top-right-radius: 0px !important
  border-bottom-right-radius: 0px !important
  // Separator color matching btn-default and darker version of btn-info:
  &.label-default
    border-right: #404040 1px solid
  &.label-info
    border-right: #2a687a 1px solid
.label-right
  border-top-left-radius: 0px !important
  border-bottom-left-radius: 0px !important
  &.label-default
    background-color: #555  // darker than #777
  &.label-info
    background-color: #72dfff
    //background-color: #40aaca
tr.messageShort:hover .label.label-default:hover
  color: inherit  // prevent highlighting tag in highlighted message of group

// Magic to get the entire tag to highlight when hovering over child:
// http://stackoverflow.com/questions/8114657/how-to-style-the-parent-element-when-hovering-a-child-element#30104683
.tagWithRemove
  pointer-events: none
.tagRemove
  opacity: 0.7
.tagRemove, .tagWithValue .label
  pointer-events: auto
.tagWithRemove:hover, .tagLink span.label:hover, .dropdown-toggle.outer-label:hover span.label, .dropdown-toggle.label:not(.outer-label):hover
  cursor: pointer
  color: #333
  background: #e6e6e6  // matching .btn-default:hover

.dropdown-menu.tagMenu
  width: 250px
  > li.disabled > a
    cursor: auto
    padding: 0px 5px  // normally 3px 20px
  > li > a
    font-size: 75%  // matches label

.tagNew form
  display: flex
  .tagKey
    flex: 1
  .tagVal
    flex: 0.5
    max-width: 25%
    &:focus
      max-width: inherit
      flex: 2
  .input-group-btn
    font-size: inherit
    width: auto

// Emoji dropdown menu

.emojiMenu
  padding: 5px // normally 5px 0
  width: max-content
  min-width: auto
  max-width: 300px
  > li
    display: inline-block
    > a
      display: inline-block
      font-size: large
      padding: 8px 8px  // normally 3px 20px
.open > .emojiMenu.dropdown-menu
  display: table

// Emoji

.emoji-plus
  font-size: 0.7em
  margin-top: -2px
  vertical-align: middle
.emoji-face
  margin-top: -2px
  vertical-align: middle
.positive
  color: #3d98e5
.neutral
  color: #8465b3
.negative
  color: #d9534f
.dark .positive
  color: #6bade5
.dark .neutral
  color: #ad76fe
.dark .negative
  color: #ff7a75

bootstrap-3-button(bg-color) // based on mixins/buttons.less
  background-color: bg-color
  &:focus, &.focus, &:hover
    background-color: darken(bg-color, 10%) // normally 10%
  &:active, &.active
    background-color: darken(bg-color, 10%) // normally 10%
    &:focus, &.focus, &:hover
      background-color: darken(bg-color, 17%) // normally 17%
.my-emoji
	bootstrap-3-button hsl(60, 80%, 70%)
.dark .my-emoji
  bootstrap-3-button hsl(60, 100%, 20%)

// History

.historySlider
	margin-left: 25px // 15px to match panel + 10px for tick radius
	margin-right: 25px
	margin-top: 5px
	margin-bottom: 15px // avoid overlap between tooltip and content
	.slider.slider-horizontal
		width: 100%

// BelowEditor

.below-editor-alert
  padding: 6px 15px
  margin-bottom: 0px
  // To allow Coauthors alert's <input> to bleed into 6px top/bottom padding,
  // simulate it with an upper strut at the beginning.  (The lower strut is
  // simulated by the <input> itself.)
  &.coauthors-alert
    padding-top: 0px
    padding-bottom: 0px
    .upper-strut
      display: inline-block
      padding-top: 6px
    //.lower-strut
    //  display: inline-block
    //  padding-bottom: 6px
    input // override .form-control
      display: inline-block
      width: auto
    .rbt
      display: inline-block

// TableOfContents

.toc-toggle
  margin-top: -19.39px  // rendered height, putting exactly into margin

nav.contents
  padding-bottom: 5px
  height: 100%  // match parent height set in JavaScript
  overflow-y: auto
  font-size: small

  li > a
    padding: 2px 5px 2px 2px
    margin: 2px 0px 2px -2px
    overflow-wrap: break-word

    .creator
      font-size: smaller
      font-style: italic

    // Push subtrees closer to parent
    + .subcontents
      margin-top: -2px

    /*
    &.deleted, &.unpublished, &.minimized
      font-size: x-small
      padding-block: 2px
    */

    /.dark &
      color: #eee
    &.deleted
      color: #a94442
      /.dark &
        color: #d9534f
    &.unpublished
      color: #8a6d3b
      /.dark &
        color: #f0ad4e
    &.private
      color: #5bc0de
    &.minimized
      color: #449d44
      /.dark &
        color: #5cb85c

  li.folded
    a
      font-size: x-small
      /*
      + .subcontents
        margin-top: -1px
      */
    li > a
      opacity: 0.7

  // Highlight TOC entries for partially or fully visible messages.
  // Purples based on #563d7c from Bootstrap docs
  a.active
    background: #d1c5e2
    /.dark &
      background: #3c245e
    &.partial
      background: #ebe2f8
      /.dark &
        background: #241835

.subcontents
  border-left: solid 2px #8465b3
  border-bottom-left-radius: 5px
  padding-left: 5px

  &.hover
    cursor: pointer
    border-left: solid 3px #6a3dad
    /.dark &
      border-left-color: #a37dde
    padding-left: 4px

  /*
  > li:last-child > a
    padding-bottom: 0px
  */

.foldedContents
  padding-bottom: 2px
  margin-top: -2px
  margin-bottom: 2px
  &:hover
    cursor: pointer
    .line
      border-left: solid 3px #6a3dad
      border-bottom: solid 3px #6a3dad
      /.dark &
        border-left-color: #a37dde
        border-bottom-color: #a37dde
  .line
    border-bottom: solid 2px #8465b3
    border-left: solid 2px #8465b3
    border-bottom-left-radius: 5px
    height: 4px

