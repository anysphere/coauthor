.group-heading, .group-right-buttons
  display: flex
  flex-direction: row
  flex-wrap: wrap
  justify-content: flex-end
  gap: 0.25em
  .title
    flex-grow: 1

// Groupings by tags
.table > tbody > tr.grouping
  background: #337ab7
  > td
    padding: 2px 16px 5px  // cf. standard 8px
  > td.empty
    padding: 6px

.importInput[type="file"]
  display: none

// Wrapper for disabled buttons to have tooltips
// See https://react-bootstrap.github.io/components/overlays/#overlays-disabled
span.wrapper
  display: inline-block
span.disabled
  cursor: not-allowed
  button
    pointer-events: none
